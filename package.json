{
  "name": "categorized-todo-list",
  "version": "1.0.0",
  "description": "A to-do list application that organizes tasks into predefined color-coded categories",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy:netlify": "npm run build && netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "check": "tsc --noEmit",
    "lint": "tsc --noEmit && echo 'TypeScript check passed!'"
  },
  "keywords": [
    "todo",
    "task-manager",
    "categorization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "fast-check": "^3.23.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "chart.js": "^4.4.7"
  }
}
